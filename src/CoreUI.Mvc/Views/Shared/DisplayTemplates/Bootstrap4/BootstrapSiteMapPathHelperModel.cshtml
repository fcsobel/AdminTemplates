@model MvcSiteMapProvider.Web.Html.Models.SiteMapPathHelperModel
@using System.Web.Mvc.Html
@using System.Linq
@using MvcSiteMapProvider.Web.Html.Models
 
<ol class="breadcrumb">
	<li class="breadcrumb-item">Home</li>
	@foreach (var node in Model.Nodes)
	{
		if (node == Model.Nodes.Last())
		{
			<li class="breadcrumb-item active">@node.Title</li>
		}
		else
		{
			string url = node.IsClickable ? node.Url : "#";
			<li class="breadcrumb-item"><a href="@url">@node.Title</a></li>
		}
	}
	<!-- Breadcrumb Menu-->
	<li class="breadcrumb-menu d-md-down-none">
		<div class="btn-group" role="group" aria-label="Button group">
			<a class="btn" asp-controller="Home" asp-action="Index" asp-route-view=""><i class="fa fa-windows"></i> Home</a>
			<a class="btn" asp-controller="Home" asp-action="About" asp-route-view=""><i class="icon-speech"></i> About</a>
			<a class="btn" asp-controller="Home" asp-action="Contact" asp-route-view=""><i class="icon-envelope"></i> Contact</a>
		</div>
	</li>
</ol>